/* pages/search/search.wxss */
@import "../templates/components.wxss";
page{
    background-color: #e5e5e5;
}
.search-top{
    position: fixed;
    background-color: #16a085;
    height: 75rpx;
    width: 100%
}
.search-form{
    float: left;
    width: 100%;
    
}
.search-input{
    height:60rpx;
    background-color: #eff2f5;
    border:none;
    border-radius: 30rpx;
    margin:7rpx 30rpx 0rpx 30rpx;
    padding-left: 60rpx;
    padding-right: 30rpx;
    font-size: 28rpx;
    color: #666;
}
.search-icon{
    position: fixed;
    left: 30rpx;
    top:12rpx;
}
.tip{
    height:45rpx;
}
.ask-notice{
    float: left;
    padding-left: 30rpx;
    margin-top: 100rpx;
    font-size: 28rpx;
    color:#666;
}
.ask-btn{
    float: right;
    margin-right: 30rpx;
    margin-top: 90rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #16a085;
    padding: 10rpx 30rpx 10rpx 20rpx;
    border-radius: 5rpx;
}
.result{
    margin-top: 120rpx;
}