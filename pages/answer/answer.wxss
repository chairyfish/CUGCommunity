/* pages/answer/answer.wxss */
pagepage{
    width: 100%;
    height: 100%;
}

.question-div{
    border-bottom: 1rpx solid #e5e5e5;
    background-color: #fff;
    height: 50rpx;
    padding: 25rpx 30rpx 10rpx 30rpx;
}
.question{
    font-size: 32rpx;
    font-weight: bold;
    width: 70%;
    white-space: nowrap;
    overflow: hidden;
	text-overflow: ellipsis;
    float: left;
    
}
.commit{
    float: right;
    font-size: 32rpx;
    color: #16a085;
    padding-right: 0rpx;
}
.input{
    margin: 0rpx auto;
    padding: 15rpx 0rpx 15rpx 0rpx;
    color: #666;
    font-size: 30rpx;
    width:700rpx;
    
}
